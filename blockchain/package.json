{
  "name": "loan-management-blockchain",
  "version": "1.0.0",
  "description": "Solana blockchain integration for loan management system",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "anchor build",
    "test": "anchor test",
    "deploy": "anchor deploy",
    "deploy:devnet": "anchor deploy --provider.cluster devnet",
    "deploy:mainnet": "anchor deploy --provider.cluster mainnet",
    "test:integration": "ts-node tests/integration.test.ts",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.{ts,json}\"",
    "clean": "rm -rf target/ dist/",
    "compile": "tsc",
    "localnet:start": "solana-test-validator",
    "airdrop": "solana airdrop 2 --url localhost"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.30.1",
    "@solana/web3.js": "^1.95.8",
    "@solana/spl-token": "^0.4.9",
    "bs58": "^5.0.0",
    "dotenv": "^16.4.7",
    "borsh": "^0.7.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@types/chai": "^5.0.3",
    "@types/mocha": "^10.0.10",
    "typescript": "^5.9.3",
    "ts-node": "^10.9.2",
    "chai": "^5.1.2",
    "mocha": "^11.0.1",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "eslint": "^9.18.0",
    "prettier": "^3.4.2"
  },
  "keywords": [
    "solana",
    "blockchain",
    "loan",
    "defi",
    "anchor",
    "smart-contract"
  ],
  "author": "Coders Cup Hackathon Team",
  "license": "MIT"
}
